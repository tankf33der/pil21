#!/usr/bin/picolisp /usr/lib/picolisp/lib.l
# 06jul23abu

(unless *Dbg
   (load "@lib/vip.l") )

(stack 1024)

(bye
   (if
      (vip~vi  ## [+<pat> | +[<num>]] <file1>  [+[<num>]] <file2> ..
         (make
            (while (opt)
               (let (S @  L (chop S))
                  (cond
                     ((pre? "+" S)
                        (link
                           (if (; (str (pack (cdr L))) 1 *Dbg 1)
                              (cons (car @) (cadr @))
                              (cons
                                 (cond
                                    ((= "+" S) T)
                                    ((format S) @)
                                    (T (cdr L)) )
                                 (opt) ) ) ) )
                     ((pre? "-" S) (load S))
                     (T (link S)) ) ) ) ) )
      0
      1 ) )
